<div class="contents row">
  <%= form_for @tweet do |f|%>
    <%= f.label :HOW_WAS_YOUR_DAY?, style: { 'margin-right' => 8 } %>
    <%= f.text_field :title, placeholder: "TITLE", class: "form-control" %>
    <%= f.text_field :text, placeholder: "TEXT", class: "form-control" %>
    <%= f.text_field :image, placeholder: "IMAGE_URL", class: "form-control" %>
    <%= f.submit "Let's post it!", class: "btn btn-primary withripple" %>
    <% end %>
</div>

