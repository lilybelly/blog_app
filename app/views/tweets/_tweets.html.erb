<div class = "container clearfix">
  <div class="row amber lighten-3">
    <div class="row">
    <div class="col s4 m7">
    </div>
    <div class="col s8 m7">
      <div class="card">
        <div class="card-image container">
          <img src="<%= tweet.image%>">
           <span class="card-title"><%= tweet.title %></span>
        </div>
        <div class="card-content container">
          <%= simple_format(tweet.text) %>
        </div>
        <div class="card-action container">
          <% if user_signed_in? && current_user.id == tweet.user_id %>
          <%= link_to "EDIT", edit_tweet_path(tweet[:id]) , method: :patch, class: "cwaves-effect waves-light btn" %>
          <%= link_to "DELETE" , "/tweets/#{tweet.id}", method: :delete, class: "cwaves-effect waves-light btn"%>
          <% end %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
